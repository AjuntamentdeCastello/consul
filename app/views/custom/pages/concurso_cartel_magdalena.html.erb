<% provide :title do %><%= t('pages.titles.concurso_cartel_magdalena', year: Poll.kind_of_cartel.last.next_year) %><% end %>

<% votacion = Poll.first %>

<div class="expanded cartel_magdalena no-margin-top">
  <div class="row">
    <div class="small-12 medium-12 column padding">
      <h1>
        <%= t('pages.cartel_magdalena_current.title', year: Poll.kind_of_cartel.last.next_year) %>
        <br>
        <small>
          <%= link_to t('pages.cartel_magdalena_current.bases_link', year: Poll.kind_of_cartel.last.next_year), "/system/concurso_cartel_magdalena/Cartel_Magdalena_2018_Bases_#{I18n.locale}.pdf", target: '_blank' %>
        </small>
      </h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-12 medium-9 column">
    <%= render 'pages/concurso_cartel_magdalena/concurso_tabs' %>
  </div>
  <aside class="small-12 medium-3 column">
    <%= render partial: 'shared/social_share', locals: {
      share_title: t("proposals.show.share"),
      title: votacion.name,
      url: poll_url
    } %>
  </aside>
</div>
